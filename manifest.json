{
  "manifest_version": 2,
  "name": "LinguaFox",
  "version": "1.0",
  "description": "Translate between Chinese and other languages using OpenAI's GPT-4o",
  "permissions": ["storage", "activeTab"],
  "browser_action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "options_page": "options.html",
  "applications": {
    "gecko": {
      "id": "linguafox@example.com",
      "strict_min_version": "58.0"
    }
  }
}